    <!-- JavaScript -->
    <script src="https://unpkg.com/@tonconnect/sdk@latest/dist/tonconnect.min.js"></script>
    <script>
        // Variables
        const splashScreen = document.getElementById('splashScreen');
        const countdownElement = document.getElementById('countdown');
        const walletBalanceElement = document.getElementById('walletBalance');
        const connectWalletButton = document.getElementById('connectWallet');

        let tonConnect;

        // Initialize TON Connect
        async function initTonConnect() {
            tonConnect = new TonConnect({
                manifestUrl: 'https://your-domain.com/tonconnect-manifest.json' // Replace with your manifest URL
            });

            connectWalletButton.addEventListener('click', async () => {
                try {
                    await tonConnect.connect();
                    alert('Wallet connected successfully!');
                    updateWalletBalance();
                } catch (error) {
                    console.error('Failed to connect wallet:', error);
                    alert('Failed to connect wallet. Please try again.');
                }
            });
        }

        // Update wallet balance
        async function updateWalletBalance() {
            if (!tonConnect || !tonConnect.connected) {
                walletBalanceElement.textContent = 'Wallet Balance: -- TON';
                return;
            }

            const account = tonConnect.account;
            const balance = await fetch(`https://tonapi.io/v2/accounts/${account.address}`).then(res => res.json());
            const formattedBalance = (balance.balance / 1e9).toFixed(2); // Convert nanotons to tons
            walletBalanceElement.textContent = `Wallet Balance: ${formattedBalance} TON`;
        }

        // Countdown Timer
        function startCountdown() {
            let timeLeft = 3600; // 1 hour in seconds
            setInterval(() => {
                const hours = Math.floor(timeLeft / 3600).toString().padStart(2, '0');
                const minutes = Math.floor((timeLeft % 3600) / 60).toString().padStart(2, '0');
                const seconds = (timeLeft % 60).toString().padStart(2, '0');
                countdownElement.textContent = `${hours}:${minutes}:${seconds}`;
                timeLeft--;
            }, 1000);
        }

        // Show splash screen for 3 seconds, then switch to the main game screen
        setTimeout(() => {
            splashScreen.style.display = 'none';
            showPage('homePage');
            startCountdown();
            initTonConnect();
        }, 3000);

        // Show a specific page and hide others
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
        }

        // Simulated Buy Card Function
        function buyCard() {
            alert('You have successfully purchased a card!');
        }

        // Copy Invite Link to Clipboard
        function copyInviteLink() {
            const inviteLink = document.getElementById('inviteLink').textContent;
            navigator.clipboard.writeText(inviteLink).then(() => {
                alert('Invite link copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy invite link:', err);
                alert('Failed to copy invite link. Please try again.');
            });
        }
    </script>
